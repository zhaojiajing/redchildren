        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img2_type4"
            android:src="@mipmap/ic_launcher"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/img3_type4"
            android:src="@mipmap/ic_launcher"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img4_type4"
            android:src="@mipmap/ic_launcher"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/img5_type4"
            android:src="@mipmap/ic_launcher"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/img6_type4"
            android:src="@mipmap/ic_launcher"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/img7_type4"
            android:src="@mipmap/ic_launcher"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>