<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF5A54"
        android:fitsSystemWindows="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_scan"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/icon_scan_top" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_rect"
            android:drawableLeft="@drawable/icon_search_home"
            android:hint="花王" />

        <ImageView
            android:id="@+id/img_msg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/icon_mes_top" />
    </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/ll"
                android:background="@color/itemuncheckedbackground"
                android:id="@+id/recycleview_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>

    <ImageView
        android:visibility="invisible"
        android:src="@drawable/back_to_top"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="84dp" />

</RelativeLayout>
